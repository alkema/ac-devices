<%= active_admin_form_for(@invitation, url: invite_admin_admin_users_path, html: { method: :post }) do |f|
  f.inputs do
    f.input :email
    f.semantic_errors # shows errors on :base
    f.inputs          # builds an input field for every attribute
  end
  f.actions do
    f.action :submit, label: t('devise.invitations.new.submit_button'), button_html: { value: t('devise.invitations.new.submit_button') }
  end
end
%>
